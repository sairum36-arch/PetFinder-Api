<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1-create-base-schema" author="Nikita">
        <createSequence sequenceName="users_id_seq" incrementBy="1" startValue="1"/>
        <createTable tableName="users">
            <column name="id" type="BIGINT" defaultValueSequenceNext="users_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="credentials">
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="notifications_id_seq" incrementBy="1" startValue="1"/>
        <createTable tableName="notifications">
            <column name="id" type="BIGINT" defaultValueSequenceNext="notifications_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"><constraints nullable="false"/></column>
            <column name="type" type="VARCHAR(100)"><constraints nullable="false"/></column>
            <column name="message" type="TEXT"/>
            <column name="is_read" type="BOOLEAN" defaultValueBoolean="false"><constraints nullable="false"/></column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"><constraints nullable="false"/></column>
        </createTable>
        <addForeignKeyConstraint baseTableName="credentials" baseColumnNames="user_id" constraintName="fk_credentials_to_users" referencedTableName="users" referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="notifications" baseColumnNames="user_id" constraintName="fk_notifications_to_users" referencedTableName="users" referencedColumnNames="id" onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>

  
<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2-create-pet-related-tables" author="Nikita">
        <createTable tableName="breeds">
            <column name="id" type="BIGINT"><constraints primaryKey="true" nullable="false"/></column>
            <column name="name" type="VARCHAR(255)"><constraints unique="true" nullable="false"/></column>
        </createTable>
        <createTable tableName="pets">
            <column name="id" type="BIGINT"><constraints primaryKey="true" nullable="false"/></column>
            <column name="user_id" type="BIGINT"><constraints nullable="false"/></column>
            <column name="breed_id" type="BIGINT"><constraints nullable="true"/></column>
            <column name="name" type="VARCHAR(255)"><constraints nullable="false"/></column>
            <column name="description" type="TEXT"/>
            <column name="weight" type="BIGINT"/>
            <column name="age" type="BIGINT"/>
        </createTable>
        <createTable tableName="collars">
            <column name="id" type="BIGINT"><constraints primaryKey="true" nullable="false"/></column>
            <column name="pet_id" type="BIGINT"><constraints nullable="false" unique="true"/></column>
            <column name="device_id" type="VARCHAR(255)"><constraints nullable="false" unique="true"/></column>
            <column name="status" type="VARCHAR(50)"><constraints nullable="false"/></column>
            <column name="battery_level" type="SMALLINT"/>
            <column name="last_location" type="GEOGRAPHY(Point, 4326)"/>
        </createTable>
        <createTable tableName="locations_history">
            <column name="id" type="BIGINT"><constraints primaryKey="true" nullable="false"/></column>
            <column name="collar_id" type="BIGINT"><constraints nullable="false"/></column>
            <column name="location" type="GEOGRAPHY(Point, 4326)"><constraints nullable="false"/></column>
            <column name="timestamp" type="TIMESTAMP WITH TIME ZONE"><constraints nullable="false"/></column>
        </createTable>
        <createTable tableName="geofences">
            <column name="id" type="BIGINT"><constraints primaryKey="true" nullable="false"/></column>
            <column name="pet_id" type="BIGINT"><constraints nullable="false"/></column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="area" type="GEOGRAPHY(Polygon, 4326)"><constraints nullable="false"/></column>
        </createTable>
        <createTable tableName="pet_media">
            <column name="id" type="BIGINT"><constraints primaryKey="true" nullable="false"/></column>
            <column name="pet_id" type="BIGINT"><constraints nullable="false"/></column>
            <column name="url" type="TEXT"><constraints nullable="false"/></column>
            <column name="display_order" type="INT"/>
            <column name="is_main_photo" type="BOOLEAN" defaultValueBoolean="false"><constraints nullable="false"/></column>
        </createTable>
    </changeSet>

    <changeSet id="2-create-pet-related-sequences" author="Nikita">
        <createSequence sequenceName="breeds_id_seq" incrementBy="1" startValue="1"/>
        <createSequence sequenceName="pets_id_seq" incrementBy="1" startValue="1"/>
        <createSequence sequenceName="collars_id_seq" incrementBy="1" startValue="1"/>
        <createSequence sequenceName="locations_history_id_seq" incrementBy="1" startValue="1"/>
        <createSequence sequenceName="geofences_id_seq" incrementBy="1" startValue="1"/>
        <createSequence sequenceName="pet_media_id_seq" incrementBy="1" startValue="1"/>
    </changeSet>

    <changeSet id="2-link-sequences-to-ids" author="Nikita">
        <addDefaultValue tableName="breeds" columnName="id" defaultValueSequenceNext="breeds_id_seq"/>
        <addDefaultValue tableName="pets" columnName="id" defaultValueSequenceNext="pets_id_seq"/>
        <addDefaultValue tableName="collars" columnName="id" defaultValueSequenceNext="collars_id_seq"/>
        <addDefaultValue tableName="locations_history" columnName="id" defaultValueSequenceNext="locations_history_id_seq"/>
        <addDefaultValue tableName="geofences" columnName="id" defaultValueSequenceNext="geofences_id_seq"/>
        <addDefaultValue tableName="pet_media" columnName="id" defaultValueSequenceNext="pet_media_id_seq"/>
    </changeSet>

    <changeSet id="2-create-pet-related-foreign-keys" author="Nikita">
        <addForeignKeyConstraint baseTableName="pets" baseColumnNames="user_id" constraintName="fk_pets_to_users" referencedTableName="users" referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="pets" baseColumnNames="breed_id" constraintName="fk_pets_to_breeds" referencedTableName="breeds" referencedColumnNames="id" onDelete="SET NULL"/>
        <addForeignKeyConstraint baseTableName="collars" baseColumnNames="pet_id" constraintName="fk_collars_to_pets" referencedTableName="pets" referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="locations_history" baseColumnNames="collar_id" constraintName="fk_locations_history_to_collars" referencedTableName="collars" referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="geofences" baseColumnNames="pet_id" constraintName="fk_geofences_to_pets" referencedTableName="pets" referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="pet_media" baseColumnNames="pet_id" constraintName="fk_pet_media_to_pets" referencedTableName="pets" referencedColumnNames="id" onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>

  